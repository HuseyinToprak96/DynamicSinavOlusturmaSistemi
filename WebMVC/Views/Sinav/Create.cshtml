@model WebMVC.ViewModels.VM_Sinav
@using WebMVC.Controllers
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Sinav Oluştur</h1>
<hr />
<div id="place">
    <div class="row">
        <div class="col-md-4">
            <form id="frmSinav">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="text" name="justSinav.SinavAdi" placeholder="Sinav adını giriniz." class="form-control" />
                </div>
                <div class="form-group">
                    <input type="text" name="justSinav.Aciklama" placeholder="Sinav açıklaması ekleyiniz." class="form-control" />
                </div>
                <div class="form-group">
                    <input type="text" name="justSinav.GecmeNotu" placeholder="Geçme notu nedir?" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="text" name="justSinav.Sure" placeholder="Sınav süresi nedir?" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Devam Et" class="btn btn-primary" />
                </div>
            </form>

        </div>
    </div>

    <div>

    </div>
</div>
<div>
    <ul id="kategoriListesi">
    </ul>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<style>
    #cevaplar {
        display: grid;
        grid-template-columns: 45% 45%;
        width: 100%;
        height: max-content;
    }
    #cont{
        display:grid;
        grid-template-rows:18% 70% 5%;
        min-height:800px;
        height:max-content;
        border:1px solid black;
    }
    #cont div{
        width:90%;
        margin:1% auto;
    }
    #ustCont{
        display:grid;
        grid-template-rows:60% 20%;
        border:5px solid black;
    }
    #ustCont:first-child{
        font-size:18pt;
        font-weight:bold;
        text-align:center;
        margin-top:2%;
    }
    #ustCont div{
        width:90%;
        height:max-content;
        border:3px solid black;
    }
    #ustKisim{
        display:grid;
        grid-template-columns:50% 20% 20%;
        width:90%;
        margin:0px auto;
        font-size:10pt;
        border:5px solid black;
    }
    #ustKisim:first-child{
        text-align:left;
    }
    #ustKisim div{
        margin:0px auto;
        border:1px solid black;
        width:90%;
        font-weight:bold;
        height:100%;
    }
    #altCont{
        border:3px solid black;
    }
    .yon {
        width: 70px;
        height: 70px;
        border: none;
        color: white;
        background-color: #4CAF50;
        cursor: pointer;
        border: 2px solid #4CAF50;
        -moz-border-radius: 50%;
        -webkit-border-radius: 50%;
        border-radius: 50%;
    }
    #sorular{
        display:grid;
        grid-template-columns:46% 46%;
        height:100%;
        width:90%;
        margin:auto auto;
        border:1px;
    }
    .soru{
        display:grid;
        grid-template-rows:30% 65%;
        height:48%;
        margin:auto auto;
        border:2px solid black;
    }
    .soru div{
        border:1px solid black;
    }
    .cevap {
        display: grid;
        grid-template-columns: 48% 48%;
        height: 90%;
        width: 90%;
        margin: auto auto;
    }
    .baslik{
       min-height:40%;
       height:max-content;
        margin:29% auto;
        width:80%;
        border:2px solid black;
        font-size:20px;
    }
    .tamamla {
        border: none;
        color: white;
        background-color: #4CAF50;
        padding: 10px 20px;
        cursor: pointer;
        border: 2px solid #4CAF50;
